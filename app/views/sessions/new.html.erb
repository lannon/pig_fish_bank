
<h1 class="pigFishish">Sign In</h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :name, "Name" %><br />
    <%= text_field_tag :name, params[:name] %>
  </p>
  <p>
    <%= label_tag :pin, "PIN" %><br />
    <%= password_field_tag :pin %>
  </p>
  <p>
    <%= submit_tag "Sign In", :class => 'button pill big'%>
  </p>
<% end %>