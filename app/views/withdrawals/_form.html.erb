<%= form_for(@withdrawal) do |f| %>
  <h2 class="pigFishish">Withdraw Funds</h2>
  <%= flash_messages %>
  <p>
    <%= f.label :source_account_id, "Select Account" %><br />
    <%= account_select(f, current_customer, :source_account_id) %>
  </p>
  <p>
    <%= f.label :amount, "Amount" %><br />
    <%= f.text_field :amount, :class => 'amount' %>
  </p>
  <%= print_or_display%>
  <p><%= f.submit "Withdraw Funds", :class => 'button pill big'%></p>
<% end %>